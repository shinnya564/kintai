
<h1>勤怠システム</h1>

<%= form_for @timecard,url:stanps_path do |f| %>
	<%= f.select :attendance, {'出勤':1,'退勤':0},{ include_blank: '選択してください'} %>
	<%= f.submit "新規登録", class:"btn btn-primary"%>
<% end %>

<br><br>

    <% @timecards.each do |f| %>
	    <%= f.created_at %>
	    <% if f.attendance = 1 %>
	    	<%= "出勤" %><br>
	    <% else %>
	    	<%= "退勤" %><br>
	    <% end %>
    <% end %>
